<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tab2"
    android:orientation="vertical"
    android:paddingBottom="16dp">


    <LinearLayout
        android:id="@+id/header_side_effect"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0.9"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:text="@string/side_effect"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/side_effect_img_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:contentDescription="expand"
            android:paddingTop="20dp"
            android:src="@drawable/ic_expand_less_white_24dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/expandable_side_effect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFF"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp">


            <Button
                android:id="@+id/btnTTS_SideEffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp"
                android:background="@drawable/button_speak_to_me"
                android:drawableLeft="@drawable/ic_speech_white_24dp"
                android:onClick="sideEffectOnClick"
                android:paddingRight="8dp"
                android:text="@string/speak_it_to_me"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="@color/white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/general_symptom"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>

        <WebView
            android:id="@+id/web_General_Symptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="@string/bad_symptom"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <WebView
            android:id="@+id/web_Bad_Symptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>





